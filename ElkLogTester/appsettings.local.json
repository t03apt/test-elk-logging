{
  "Logging": {
    "Serilog": {
      "WriteTo": [
        {
          "Name": "Elasticsearch",
          "Args": {
            "nodeUris": "http://localhost:9200",
            "indexFormat": "itron-{0:yyyy.MM.dd}",
            "inlineFields": true,
            "autoRegisterTemplate": true,
            "autoRegisterTemplateVersion": "ESv6",
            "customFormatter": "Itron.Platform.Logging.Serilog.Elasticsearch.CustomExceptionAsObjectJsonFormatter, Itron.Platform.Logging",
            "emitEventFailure": "WriteToSelfLog"
          }
        }
      ]
    }
  }
}